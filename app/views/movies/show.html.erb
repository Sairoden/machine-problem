<div style= "margin-top: 5rem;">

  <div class="container">
    <div class="card border-info">
      <h2 class="card-header">
        <%= @movie.title %>
      </h2>
      <div class="card-body">
        <div class="card-text">
          <%= @movie.description %>
        </div>
        <small> Length: <%= @movie.length %> minutes </small>
      </div>
    </div>

    <br>

    <%= link_to 'Edit', edit_movie_path(@movie), class: "btn btn-xs btn-warning" %> |
    <%= link_to 'Back', movies_path, class: "btn btn-xs btn-danger" %>

  </div>
</div>